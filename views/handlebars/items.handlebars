<div class="row">
  <div class="col-6 offset-3">
    <h2 class="h2">Vista de productos</h2>
    <br>
    {{#if items}}
    <table class="table table-dark">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Precio</th>
          <th>Foto</th>
        </tr>
      </thead>
      <tbody>
        {{#each items}}
          <tr>
            <td class="align-middle">{{ this.title }}</td>
            <td class="align-middle">${{ this.price }}</td>
            <td><img src="{{ this.thumbnail }}" class="product-img"></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    {{else}}
    <div class="card text-dark bg-warning">
      <div class="card-body">
        <p class="card-text">No se encontraron productos</p>
      </div>
    </div>
    {{/if}}
  </div>
</div>